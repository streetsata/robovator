<log4net>
  <root>
    <level value="ALL" />
    <appender-ref ref="RollingLogFileAppender" />
    <appender-ref ref="ConsoleAppender" />
  </root>
  <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%message%newline" />
    </layout>
    <filter type="log4net.Filter.LevelRangeFilter">
      <param name="LevelMin" value="INFO"/>
      <param name="LevelMax" value="INFO"/>
    </filter>
  </appender>
  <appender name="RollingLogFileAppender" type="log4net.Appender.RollingFileAppender">
    <param name="DatePattern" value="_yyyy-MM-dd&quot;.log&quot;" />
    <param name="File" value="logs\app.log" />
    <param name="AppendToFile" value="true" />
    <param name="MaxSizeRollBackups" value="2" />
    <param name="MaximumFileSize" value="5MB" />
    <param name="RollingStyle" value="Composite" />
    <param name="StaticLogFileName" value="false" />
    <layout type="log4net.Layout.PatternLayout">
      <param name="Header" value="===============  [log] ===============%newline" type="log4net.Util.PatternString" />
      <param name="Footer" value="%newline" type="log4net.Util.PatternString" />
      <param name="ConversionPattern" value="%d{dd-MMM-yyyy HH:mm:ss.fff} %4t ( Level - %-5p) [%a] %C{1}::%M():(%L): %m%n" />
    </layout>
  </appender>
</log4net>